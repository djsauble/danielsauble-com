---
import { Image } from 'astro:assets';
import Landing from '../layouts/Landing.astro';
import Button from '../components/Button.jsx';

import mug from '../../public/images/daniel.jpeg';

const title = "Daniel Sauble";
---

<Landing title={title}>
  <Image src={mug} alt="mug" class="mug" />

  <h1>Daniel Sauble</h1>

  <p>I&rsquo;m a full-stack Product Designer specializing in AI developer tools.</p>

  <div class="button-container">
    <Button to="/projects">Projects</Button>
    <Button to="/resume">Résumé</Button>
  </div>
</Landing>
